LIB = plateau.json code.txt
OUTPUT = code.c
EXEC = projet

exe : $(EXEC)
	./$(EXEC)

$(EXEC) : $(OUTPUT)
	gcc -o $(EXEC) $(OUTPUT)

$(OUTPUT) : projet
	./projet $(LIB)

projet : y.tab.o lex.yy.o liste.o
	gcc -o projet y.tab.o lex.yy.o liste.o -lm -lfl

liste.o :
	gcc -c liste.c liste.h

y.tab.o : y.tab.h y.tab.c
	gcc -c y.tab.c

y.tab.c y.tab.h : projet.yacc.y
	yacc -vd projet.yacc.y

lex.yy.o : lex.yy.c y.tab.h
	gcc -c lex.yy.c

lex.yy.c : projet.lex
	flex projet.lex

clean:
	rm -f y.tab.*
	rm -f lex.yy.*
	rm -f projet projet.exe
	rm -f *~
	rm -f *.stackdump
	rm -f liste.o
